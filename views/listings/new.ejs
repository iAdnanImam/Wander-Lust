<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Create a new listing:</h2><br><br>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-2">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" id="title" type="text" placeholder="Enter Title" class="form-control" required>
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Title is required.</div>
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" id="description" placeholder="Enter Description" rows="5" class="form-control" required ></textarea>
          <div class="valid-feedback">Description✅</div>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-2">
          <label for="image" class="form-label">Upload Image<i>(max 5MB.)</i></label>
          <input name="listing[image]" id="image" placeholder="Enter URL" class="form-control" type="file" required>
          <div class="valid-feedback">Image✅</div>
          <div class="invalid-feedback">Image is required.</div>
        </div>
        <div class="mb-2">
          <label for="price" class="form-label">Price (₹)</label>
          <input name="listing[price]" id="price" placeholder="Enter Price" class="form-control" type="text" required>
          <div class="valid-feedback">Price looks fine!</div>
          <div class="invalid-feedback">Please, Enter a valid price</div>
        </div>
        <div class="mb-2">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" id="category" class="form-select" required>
            <option disabled selected value="">Select a category</option>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Beach">Beach</option>
            <option value="Amazing Pools">Amazing Pools</option>
            <option value="Farms">Farms</option>
            <option value="Amazing View">Amazing View</option>
            <option value="Tiny Homes">Tiny Homes</option>
            <option value="OMG!">OMG!</option>
            <option value="Iconic">Iconic</option>
            <option value="Mountains">Mountains</option>
            <option value="Castles">Castles</option>
            <option value="Camping">Camping</option>
            <option value="Arctic">Arctic</option>
          </select>
          <div class="valid-feedback">Category✅</div>
          <div class="invalid-feedback">Please select a category.</div>
        </div>
        <div class="mb-2">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" id="location" placeholder="Enter Location" class="form-control" type="text" required>
          <div class="valid-feedback">Location✅</div>
          <div class="invalid-feedback">Location is required.</div>
        </div>
        <div class="mb-2">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" id="country" placeholder="Enter Country" class="form-control" type="text" required>
          <div class="valid-feedback">Country✅</div>
          <div class="invalid-feedback">Country is required.</div>
        </div><br>
        <button class="btn btn-dark add-btn mt-3">Add Listing</button><br><br>
      </form>
    </div>
  </div>
