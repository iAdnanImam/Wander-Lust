<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit your Listing</h2><br><br>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-2">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Title is required.</div>
                </div>
                <div class="mb-2">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" rows="5" required><%= listing.description %></textarea>
                    <div class="valid-feedback">Description✅</div>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
                <div class="mb-2">
                    Original Listing Image<br>
                    <img src="<%=originalURL%>"/>
                </div>
               <div class="mb-2">
                    <label for="image" class="form-label">Upload Image<i>(max 5MB.)</i></label>
                    <input name="listing[image]" id="image" class="form-control" type="file">
                    <div class="valid-feedback">Image✅</div>
                </div>
                <div class="mb-2">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" id="category" class="form-select">
                        <option disabled selected value="">Select a category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Beach">Beach</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Farms">Farms</option>
                        <option value="Amazing View">Amazing View</option>
                        <option value="Tiny Homes">Tiny Homes</option>
                        <option value="OMG!">OMG!</option>
                        <option value="Iconic">Iconic</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Camping">Camping</option>
                        <option value="Arctic">Arctic</option>
                    </select>
                    <div class="valid-feedback">Category✅</div>
                    <div class="invalid-feedback">Please select a category.</div>
                    </div>
                <div class="mb-2">
                    <label for="price" class="form-label">Price(&#8377;)</label>
                    <input name="listing[price]" value="<%= listing.price %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Price looks fine!</div>
                    <div class="invalid-feedback">Please, Enter a valid price</div>
                </div>
                <div class="mb-2">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Location✅</div>
                    <div class="invalid-feedback">Location is required.</div>
                </div>
                <div class="mb-2">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Country✅</div>
                    <div class="invalid-feedback">Country is required.</div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
</body>
